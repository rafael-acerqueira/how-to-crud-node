<%- include('../header') %>
<form method="POST" action="/publicacoes/editar/<%= categoria %>/<%= content.id %>" >
  <div class="form-group">
    <label for="titulo">Título</label>
    <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Insira o titulo da publicação" value="<%= content.titulo %>">
  </div>
  <div class="form-group">
    <label for="conteudo">Conteúdo</label>
    <textarea type="text" class="form-control" name="conteudo" id="conteudo" placeholder="Insira o conteúdo da publicação"><%= content.conteudo %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>
