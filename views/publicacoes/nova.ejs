<%- include('../header') %>

<form method="POST" action="/publicacoes/nova" >
  <div class="form-group">
    <label for="titulo">Título</label>
    <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Insira o titulo da publicação">
  </div>
  <div class="form-group">
    <label for="categoria">Categoria</label>
    <select class="form-control" name="categoria" id="categoria">
      <% categorias.forEach(content => { %>
        <option value="<%= content.id %>"><%= content.categoria %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="conteudo">Conteúdo</label>
    <textarea type="text" class="form-control" name="conteudo" id="conteudo" placeholder="Insira o conteúdo da publicação"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>
